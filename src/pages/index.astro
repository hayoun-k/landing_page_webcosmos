---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Staff from '../components/Staff.astro';
import Colton from '../images/colton-sturgeon.jpg';
import Giorgio from '../images/giorgio.jpg';
import Hessam from '../images/hessam-nabavi.jpg';
import Astronaut from '../images/astronaut.avif';
import Buildings from '../images/buildings.avif';
import Sky from '../images/sky.avif';
import Logo from '../images/logo.webp';
import { Image } from 'astro:assets';
---

<Layout title="WebCosmos">
	<header>
		<ul class="header-nav">
			<li class="nav-item">
				<div class="logo-container">
					<a href="#"><Image src={Logo} alt="logo" id='logo'/></a>
				</div>
			</li>
			<li class="nav-item"><a href="#">Home</a></li>
			<li class="nav-item"><a href="#">Services</a></li>
			<li class="nav-item"><a href="#">Contact</a></li>
		</ul>
	</header>
	<main>
		<section class="hero">
			<h1>Launching your digital dreams into reality.</h1>
		</section>
		<section class="about">
			<div class="container">
				<Image src={Astronaut} alt='astronaut image' />
				<div class="text-container">
					<h2>Unleash your brand’s true potential with our services</h2>
					<p>Our mission can’t be achieved without empowering your journey. Let’s build this spaceship together and command your industry one byte at a time.</p>
				</div>
			</div>
			<div class="container">
				<div class="text-container">
					<h2>Creative Solutions Tailored to your unique Needs</h2>
					<p>We're not just a web agency, we're your technical co-founders. Expect the unexpected because we’re ready to execute with finesse.</p>
				</div>
				<Image src={Buildings} alt='building image' />
			</div>
		</section>
		<section class="cta">
			<div class="cta-container">
				<h2>Ready to launch? So are we.</h2>
				<div class="button-container">
					<a href="#" class="btn primary">Contact Us</a>
					<a href="#" class="btn">Our Portfolio</a>
				</div>
			</div>
		</section>
		<section class="price">
			<ul class="card-list">
				<Card name="Saturn" price="$19.99/mo" desc={["10 Pages", "SEO Setup", "Analytics", "Support"]} />
				<Card name="Jupiter" price="$29.99/mo" desc={["Unlimited Pages", "Premium SEO", "Pro Analytics", "Priority Support"]}/>
			</ul>
		</section>
		<section class="quote">
			<h2>A journey beyond the stars.</h2>
			<Image src={Sky} alt='image of sky' class="quote-bg" />
		</section>
		<section class="staffs">
			<ul class="staff-container">
				<Staff profile={Colton} name='Colton' title='Web Developer'/>
				<Staff profile={Giorgio} name='Giorgio' title='Designer'/>
				<Staff profile={Hessam} name='Hessam' title='Project Manager'/>
			</ul>
		</section>
	</main>
	<footer>
		<ul class="social-links">
			<li>
				<a href="#" class="social-link x" aria-label="link to our X">
